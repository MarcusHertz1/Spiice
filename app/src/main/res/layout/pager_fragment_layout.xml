<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background">

    <TextView
        android:id="@+id/skipBt"
        style="@style/BottomTextStyle"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="15dp"
        android:text="@string/skip"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/spiiceTitle"
        style="@style/SpiiceTitle"
        android:layout_marginTop="11dp"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/skipBt" />

    <ImageView
        android:id="@+id/pagerImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_max="276dp"
        app:layout_constraintBottom_toTopOf="@+id/subtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spiiceTitle"
        app:srcCompat="@drawable/pager_image_0"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/subtitle"
        style="@style/BottomTextStyle"
        android:text="@string/pager_text_0"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/dot0"
        android:layout_marginBottom="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/dot0"
        style="@style/DotStyle"
        android:layout_marginBottom="72dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dot1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/dot1"
        style="@style/DotStyle"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintBottom_toBottomOf="@id/dot0"
        app:layout_constraintEnd_toStartOf="@+id/dot2"
        app:layout_constraintStart_toEndOf="@+id/dot0"
        app:layout_constraintTop_toTopOf="@id/dot0"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/dot2"
        style="@style/DotStyle"
        app:layout_constraintBottom_toBottomOf="@id/dot0"
        app:layout_constraintEnd_toStartOf="@+id/dot3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/dot1"
        app:layout_constraintTop_toTopOf="@id/dot0"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/dot3"
        style="@style/DotStyle"
        app:layout_constraintBottom_toBottomOf="@id/dot0"
        app:layout_constraintEnd_toStartOf="@+id/dot4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/dot2"
        app:layout_constraintTop_toTopOf="@id/dot0"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/dot4"
        style="@style/DotStyle"
        app:layout_constraintBottom_toBottomOf="@id/dot0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/dot3"
        app:layout_constraintTop_toTopOf="@id/dot0"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>