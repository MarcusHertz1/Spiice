<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/viewNoteGrayContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayBG"
    android:gravity="bottom">

    <LinearLayout
        android:id="@+id/viewNoteContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        android:background="@drawable/view_note_bg"
        android:maxHeight="670dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleTV"
            style="@style/SpiiceTitle"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="20dp"/>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/messageSV"
            style="@style/SpiiceTitle"
            android:textSize="16sp"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="44dp"
            android:layout_marginBottom="40dp">
            <TextView
                android:id="@+id/messageTV"
                style="@style/SpiiceTitle"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/toolBarGray"
                android:text="@string/message"/>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</LinearLayout>